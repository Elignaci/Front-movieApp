<%- include('./templates/header.ejs') %>
<%- include('./templates/nav.ejs') %>
        <main>
            <h1>Todas las peliculas</h1>
            <form action="/admin/search" method="POST">
                <!-- buscar -->
                <label for="busqueda"></label>
                <input type="text" id="busqueda" name="busqueda" placeholder="Buscar una pelicula">
                <button type="submit">BUSCAR</button>
            </form>
            <p><a href="/admin/create-movies">CREAR PELICULA</a></p>
            <section>
                <% if (data.length> 0) { %>
                    <% data.forEach( movie => { %>
                        <article>
                                <div>
                                    <h2><%= movie.title %></h2>
                                    <p>Director: <%= movie.director %></p>
                                    <p>AÃ±o: <%= movie.year %></p>
                                    <p>Duracion: <%= movie.duration %></p>
                                    <p>Genero: <%= movie.genre_name %></p>
                                </div>  
                                <div>
                                    <img src="" alt="">
                                </div>
                                <div>
                                    <a href="/admin/edit/<%= movie.id %>"><button>EDITAR</button></a>
                                    <form action="/admin/delete-movies/<%= movie.id %>" method="POST">
                                        <button type="submit">Eliminar</button>
                                    </form>
                                </div>
                        </article>
                            <% }) %>
                    <% } else { %>
                     <p>No hay pelis que mostrar</p>
                <% } %>
            </section> 
        </main>
<%- include('./templates/footer.ejs') %>